extends jade/layouts/_login_page

block content
  .container-fluid.login-page-cont-fluid
    .container.login-page-cont
      .login-page-row
        .login-page-block
          section.login-page-section
            form.login-page-form(method='post', action='#', role='login')
              img.img-responsive.login-page-form__img(src='images/logo_norsta.png', alt='')
              input.form-control.input-lg.login-page-form__control(type='email', name='email', placeholder='Nazwa użytkownika', required='', value='')
              input#password.form-control.input-lg.login-page-form__control(type='password', placeholder='Hasło', required='')
              .pwstrength_viewport_progress
              button.btn.btn-lg.btn-primary.btn-block.login-page-form__button(type='submit', name='go') Zaloguj
              .login-page-form-password
                a(href='#') Zapomniałem/am hasła
            .form-links.login-page-form-links
              a.login-page-form-links__link(href='#') www.argevide.com
